<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".SampleActivity">

        <Button
            android:id="@+id/button_stacktrace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Stacktrace"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_json"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Json"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_key_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="KeyValues"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_configure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Configure"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_configure_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Configure default"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_java_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Launch Footprint.java sample"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
